<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GA360.Pages.HomePage"
    Title="Home"
    BackgroundColor="{AppThemeBinding 
                        Dark={StaticResource WindowBackgroundColorDark}, 
                        Light={StaticResource WindowBackgroundColor}}"
    Visual="Material">
    <ContentPage.Content>
        
        <StackLayout Orientation="Vertical">
            <Button x:Name="ButtonLat" Text = "Location Services and Get Lat/Long" Clicked ="Button_Clicked" HorizontalOptions = "CenterAndExpand" VerticalOptions="Center" WidthRequest="250"/> 
            <Button x:Name = "stopButton" Text="Stop getting Location" Clicked="Button1_Clicked"
                    HorizontalOptions = "CenterAndExpand" VerticalOptions="Center" WidthRequest="250" IsEnabled="False"/>
            <Label x:Name="resultLocation"  VerticalOptions="Center" WidthRequest="250" Margin="80,10,10,10"/>
            
        </StackLayout>
    
    </ContentPage.Content>
</ContentPage>
